<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/people1"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo1"
                        android:layout_margin="10dp"
                        android:background="#00ffffff">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people2"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo2"
                        android:layout_margin="10dp"
                        android:background="#00ffffff">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people3"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo3"
                        android:layout_margin="10dp"
                        android:background="#00ffffff">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people4"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo4"
                        android:layout_margin="10dp"
                        android:background="#00ffffff">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people5"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo5"
                        android:layout_margin="10dp"
                        android:background="#00ffffff">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people6"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo6"
                        android:layout_margin="10dp"
                        android:background="#00ffffff">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people7"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo7"
                        android:layout_margin="10dp"
                        android:background="#00ffffff">
                    </ImageButton>
                </LinearLayout>
            </HorizontalScrollView>

            <ImageView
                android:id="@+id/frame_11712"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/text1" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_image_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" >
            </androidx.viewpager2.widget.ViewPager2>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/text2"></ImageView>

                <ImageButton
                    android:id="@+id/modubogi"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="84dp"
                    android:background="#00ffffff"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/modubogi"></ImageButton>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/oneday_class1"
                        android:src="@drawable/onedayclass1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />
                    <ImageView
                        android:id="@+id/oneday_class2"
                        android:src="@drawable/onedayclass2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />
                    <ImageView
                        android:id="@+id/oneday_class3"
                        android:src="@drawable/onedayclass3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/text3"></ImageView>

                <ImageButton
                    android:id="@+id/modubogi2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="10dp"
                    android:background="#00ffffff"
                    android:src="@drawable/modubogi">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/farmhouse_story1"
                    android:src="@drawable/farm_house_story1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp" />
                <ImageView
                    android:id="@+id/farmhouse_story2"
                    android:src="@drawable/farm_house_story2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp" />
                <ImageView
                    android:id="@+id/farmhouse_story3"
                    android:src="@drawable/farm_house_story3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="44dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/text4"></ImageView>
                <ImageButton
                    android:id="@+id/modubogi3"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="84dp"
                    android:background="#00ffffff"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/modubogi"></ImageButton>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/tip1"
                        android:src="@drawable/tip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />
                    <ImageView
                        android:id="@+id/tip2"
                        android:src="@drawable/tip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />
                    <ImageView
                        android:id="@+id/tip3"
                        android:src="@drawable/tip3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>