<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/people1"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo1"
                        android:layout_margin="10dp">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people2"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo2"
                        android:layout_margin="10dp">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people3"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo3"
                        android:layout_margin="10dp">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people4"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo4"
                        android:layout_margin="10dp">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people5"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo5"
                        android:layout_margin="10dp">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people6"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo6"
                        android:layout_margin="10dp">
                    </ImageButton>
                    <ImageButton
                        android:id="@+id/people7"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:src="@drawable/peo7"
                        android:layout_margin="10dp">
                    </ImageButton>
                </LinearLayout>
            </HorizontalScrollView>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_image_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>