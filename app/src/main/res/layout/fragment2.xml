<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--뒤로 가기-->
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="20dp"
            android:background="#00ffffff"
            android:src="@drawable/vector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--원데이 클래스-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/text2"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="276dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/search"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="312dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/shop"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/rounded_border"
            android:hint="@string/search_class"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textColor="@color/background_color_reverse"
            android:textColorHint="@color/background_color_reverse"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="68dp"
            android:background="#00ffffff"
            app:layout_constraintStart_toEndOf="@+id/etEmail"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/drawer_btn" />




        <!--최근 검색어-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="최근 검색어"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="#00ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/recent1" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="#00ffffff"
            app:layout_constraintStart_toEndOf="@+id/imageButton3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/recent2" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:background="#00ffffff"
            app:layout_constraintStart_toEndOf="@+id/imageButton4"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/recent3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:text="20개의 클래스"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/people1"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00ffffff"
                    android:src="@drawable/peo1">
                </ImageButton>

                <ImageButton
                    android:id="@+id/people2"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00ffffff"
                    android:src="@drawable/peo2"></ImageButton>

                <ImageButton
                    android:id="@+id/people3"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00ffffff"
                    android:src="@drawable/peo3"></ImageButton>

                <ImageButton
                    android:id="@+id/people4"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00ffffff"
                    android:src="@drawable/peo4"></ImageButton>

                <ImageButton
                    android:id="@+id/people5"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00ffffff"
                    android:src="@drawable/peo5"></ImageButton>

                <ImageButton
                    android:id="@+id/people6"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00ffffff"
                    android:src="@drawable/peo6"></ImageButton>

                <ImageButton
                    android:id="@+id/people7"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00ffffff"
                    android:src="@drawable/peo7"></ImageButton>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navi_header"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>